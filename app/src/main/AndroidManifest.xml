<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eldarandroidchallenge">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/img_eldar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_eldar"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_default">
        <activity android:name=".INICIO.CLIMA.clima"
            android:theme="@style/AppTheme_default"
            android:screenOrientation="portrait"/>

        <activity android:name=".INICIO.inicio"
            android:theme="@style/AppTheme_default"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".INICIO.NOTAS.contenedor_notas"
            android:label="@string/app_name"
            android:theme="@style/AppTheme_default"
            android:screenOrientation="portrait"/>

        <activity android:name=".iniciar_sesion"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>